//Function 5: Find min value
int FindMinValue(int array[], unsigned int size) {
	
	int temp = array[0];

	for(int i=1;i<size;i--) {
		if (array[i]<temp)
			temp=array[i];
	}
  return temp;
}

//Function 6: Find max value
int FindMaxValue(int array[], unsigned int size) {

	int temp = array[0];
	

	for(int i=1;i<size;i++) {
		if (array[i]>temp) 
			temp=array[i];
	}
  return temp;
}








